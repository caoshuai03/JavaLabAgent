<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs.rag.mapper.AliOssFileMapper">

    <resultMap id="BaseResultMap" type="com.cs.rag.entity.AliOssFile">
            <id property="id" column="id" />
            <result property="fileName" column="file_name" />
            <result property="url" column="url" />
            <result property="vectorId" column="vector_id" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,file_name,url,vector_id,create_time,update_time
    </sql>
    <select id="findByFileNameContaining" resultType="com.cs.rag.entity.AliOssFile">
        SELECT * FROM ali_oss_file
        <where>
            <if test="fileName != null and fileName != ''">
                file_name LIKE '%' || #{fileName} || '%'
            </if>
        </where>
        ORDER BY create_time DESC, id DESC
    </select>
</mapper>
