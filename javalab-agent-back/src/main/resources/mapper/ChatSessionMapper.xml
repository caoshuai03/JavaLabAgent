<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
    会话表Mapper XML配置
    针对表【chat_session】的数据库操作
    @author caoshuai
-->
<mapper namespace="com.cs.rag.mapper.ChatSessionMapper">

    <!-- 结果映射：ChatSession实体 -->
    <resultMap id="BaseResultMap" type="com.cs.rag.entity.ChatSession">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <!-- 基础列定义 -->
    <sql id="Base_Column_List">
        id, user_id, title, created_at, updated_at, deleted
    </sql>

    <!-- 
        根据用户ID查询会话列表，按更新时间倒序
        
        @param userId 用户ID
        @return 会话列表
    -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_session 
        WHERE user_id = #{userId} AND (deleted = 0 OR deleted IS NULL)
        ORDER BY updated_at DESC
    </select>

    <!-- 
        更新会话的更新时间
        每次新增消息时调用此方法，保持会话列表按最新活动排序
        
        @param sessionId 会话ID
    -->
    <update id="updateSessionTime">
        UPDATE chat_session 
        SET updated_at = CURRENT_TIMESTAMP 
        WHERE id = #{sessionId}::uuid
    </update>

    <!-- 
        插入新会话
        使用 ::uuid 将字符串转换为 PostgreSQL UUID 类型
        
        @param chatSession 会话对象
    -->
    <insert id="insert" parameterType="com.cs.rag.entity.ChatSession">
        <!-- 使用数据库CURRENT_TIMESTAMP确保时间一致性 -->
        INSERT INTO chat_session (id, user_id, title, created_at, updated_at, deleted)
        VALUES (#{id}::uuid, #{userId}, #{title}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP, 0)
    </insert>

    <!-- 
        根据ID查询会话
        使用 ::uuid 将字符串转换为 PostgreSQL UUID 类型
        
        @param id 会话ID
    -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_session 
        WHERE id = #{id}::uuid AND (deleted = 0 OR deleted IS NULL)
    </select>
    
    <!-- 
        根据ID和用户ID查询会话（带用户归属校验）
        用于验证会话是否属于指定用户，防止越权访问
        
        @param sessionId 会话ID
        @param userId 用户ID
        @return 会话对象，如果不存在或不属于该用户则返回null
    -->
    <select id="selectByIdAndUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_session 
        WHERE id = #{sessionId}::uuid 
          AND user_id = #{userId} 
          AND (deleted = 0 OR deleted IS NULL)
    </select>
    
    <!-- 
        逻辑删除会话（带用户归属校验）
        将 deleted 标记设为 1，仅删除属于指定用户的会话
        
        @param sessionId 会话ID
        @param userId 用户ID
        @return 影响的行数
    -->
    <update id="logicalDeleteWithUser">
        UPDATE chat_session 
        SET deleted = 1, updated_at = CURRENT_TIMESTAMP 
        WHERE id = #{sessionId}::uuid 
          AND user_id = #{userId}
    </update>

</mapper>
